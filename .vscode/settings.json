{
  // "python.testing.pytestArgs": ["backend/tests"],
  // "python.testing.unittestEnabled": false,
  // "python.testing.pytestEnabled": true,
  "cSpell.words": [
    "autouse",
    "cooldown",
    "levelname",
    "pyproject",
    "unixepoch"
  ],
  "flake8.args": ["--max-line-length=88", "--ignore=W503,E501,E203"],
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/__pycache__": true,
    "**/.venv": true,
    "**/.pytest_cache": true,
    "**/node_modules": true,
    "**/.svelte-kit": true
  },
  "css.lint.unknownAtRules": "ignore",
  "python-envs.defaultEnvManager": "ms-python.python:venv",
  "python-envs.pythonProjects": []
}
