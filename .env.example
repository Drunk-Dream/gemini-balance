############### API 配置 ###############
# Google Gemini API 的基础 URL。
# 默认值：https://generativelanguage.googleapis.com
GEMINI_API_BASE_URL=https://generativelanguage.googleapis.com

# OpenAI API 的基础 URL。
# 默认值：https://generativelanguage.googleapis.com/v1beta/openai (注意：这里可能需要根据实际OpenAI API地址调整)
OPENAI_API_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai

# 请求超时配置(秒)
# 默认值120
REQUEST_TIMEOUT_SECONDS=120

############### Cloudflare Gateway 配置 ###############
# 是否使用Cloudflare Gateway API
# 默认值：False
CLOUDFLARE_GATEWAY_ENABLED=False

# Cloudflare Gateway API 认证密钥
# 无默认值
# CF_AI_AUTHORIZATION_KEY=

############### 日志配置 ###############
# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)。
# 默认值：INFO
LOG_LEVEL=INFO

# 是否启用调试日志。设置为 "true" 启用，"false" 禁用。
# 默认值：False
DEBUG_LOG_ENABLED=False

# 调试日志文件的路径。
# 默认值：logs/gemini_debug.log
DEBUG_LOG_FILE=logs/gemini_debug.log

# 日志历史记录大小，用于在内存中保留的日志条目数。
# 默认值：100
LOG_HISTORY_SIZE=100

############### 密钥管理配置 ###############
# API 密钥冷却时间(秒)，当密钥失败时，该密钥将在此时间内不被使用。
# 默认值：300 (5分钟)
API_KEY_COOL_DOWN_SECONDS=300

# API 密钥失败阈值，当密钥失败次数达到此值时，将进入冷却期。
# 默认值：3
API_KEY_FAILURE_THRESHOLD=3

# API 密钥最大冷却时间(秒)，防止无限期冷却。
# 默认值：43200 (12小时)
MAX_COOL_DOWN_SECONDS=43200

# 默认的等待时间(秒)，当 API 请求被限速时，将等待此时间后重试。
# 默认值：90 (1.5分钟)
RATE_LIMIT_DEFAULT_WAIT_SECONDS=90

# 是否在冷却结束后检查 API 健康状态。
# 默认值：False
CHECK_HEALTH_AFTER_COOL_DOWN=False

# 最大重试次数。
# 默认值：-1(auto)
MAX_RETRIES=-1

# 无API等待时长 (秒)
# 默认值：5
NO_KEY_WAIT_SECONDS=5

# 密钥在用状态的超时时间(秒)
# 默认值：300
KEY_IN_USE_TIMEOUT_SECONDS=300

# 默认的冷却检查时间(秒)
# 默认值：300
DEFAULT_CHECK_COOLED_DOWN_SECONDS=300

############### 数据库配置 ###############
# 数据库类型，可选值为 "redis" 或 "sqlite"。
# 默认值：sqlite
DATABASE_TYPE=sqlite

# SQLite 数据库文件路径。
# 默认值：data/sqlite.db
SQLITE_DB=data/sqlite.db

# 是否强制重置数据库。
FORCE_RESET_DATABASE=False

############### 认证与安全配置 ###############
# 默认密码，用于简化登录。
# 默认值：admin
PASSWORD=admin

# 用于 JWT 签名的密钥。
# 默认值：your-super-secret-key
SECRET_KEY=your-super-secret-key

# JWT 签名算法。
# 默认值：HS256
ALGORITHM=HS256

# 访问令牌过期时间(分钟)。
# 默认值：30
ACCESS_TOKEN_EXPIRE_MINUTES=30

############### 并发设置 ###############
# 最大并发请求数。
# 默认值：3
MAX_CONCURRENT_REQUESTS=3

# 并发请求超时时间(秒)。
# 默认值：60
CONCURRENCY_TIMEOUT_SECONDS=60.0
